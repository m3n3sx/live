}

/* Mobile responsive dla quick themes */
@media (max-width: 768px) {
    .mas-quick-themes {
        right: calc(var(--woow-space-2xl) + 120px);
        gap: var(--woow-space-xs);
    }
    
    .mas-quick-theme-btn {
        width: 40px;
        height: 40px;
        font-size: 16px;
    }
    
    .mas-theme-toggle,
    .mas-live-preview-toggle {
        bottom: var(--woow-space-2xl);
        width: 48px;
        height: 48px;
        font-size: var(--woow-font-size-lg);
    }
    
    .mas-theme-toggle {
        right: var(--woow-space-2xl);
    }
    
    .mas-live-preview-toggle {
        right: calc(var(--woow-space-2xl) + 60px);
    }
}

/* ==========================================================================
   REDESIGN: Status Bar - Modern Info Display
   ========================================================================== */

.mas-v2-status-bar {
    position: fixed;
    bottom: var(--woow-space-2xl);
    left: var(--woow-space-2xl);
    right: calc(var(--woow-space-3xl) + 144px + var(--woow-space-lg));
    background: var(--woow-glass-bg);
    backdrop-filter: var(--woow-blur-xl);
    -webkit-backdrop-filter: var(--woow-blur-xl);
    border: 1px solid var(--woow-glass-border);
    border-radius: var(--woow-radius-2xl);
    padding: var(--woow-space-lg) var(--woow-space-2xl);
    box-shadow: var(--woow-glass-shadow);
    z-index: 999;
}

.mas-v2-status-content {
    display: flex;
    align-items: center;
    gap: var(--woow-space-2xl);
    font-size: var(--woow-font-size-sm);
    color: rgba(255, 255, 255, 0.8);
}

.mas-v2-status-item {
    display: flex;
    align-items: center;
    gap: var(--woow-space-sm);
}

.mas-v2-status-label {
    font-weight: 500;
}

.mas-v2-status-value {
    font-weight: 600;
    color: white;
    padding: var(--woow-space-xs) var(--woow-space-sm);
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--woow-radius-md);
}

/* ==========================================================================
   REDESIGN: Responsive Design - Mobile First
   ========================================================================== */

@media (max-width: 768px) {
    .mas-v2-admin-wrapper {
        padding: var(--woow-space-lg);
    }
    
    .mas-v2-header {
        margin: var(--woow-space-lg);
        padding: var(--woow-space-2xl);
    }
    
    .mas-v2-nav {
        margin: 0 var(--woow-space-lg) var(--woow-space-lg) var(--woow-space-lg);
    }
    
    .mas-v2-content {
        padding: 0 var(--woow-space-lg) var(--woow-space-lg) var(--woow-space-lg);
    }
    
    .mas-v2-settings-columns {
        grid-template-columns: 1fr;
        gap: var(--woow-space-lg);
    }
    
    .mas-v2-card {
        padding: var(--woow-space-2xl);
    }
    
    .mas-v2-nav-tabs {
        gap: var(--woow-space-xs);
    }
    
    .mas-v2-nav-tab {
        padding: var(--woow-space-md) var(--woow-space-lg);
        font-size: var(--woow-font-size-xs);
    }
    
    .mas-v2-nav-tab .mas-v2-nav-text {
        display: none;
    }
    
    .mas-theme-toggle,
    .mas-live-preview-toggle {
        bottom: var(--woow-space-2xl);
        width: 48px;
        height: 48px;
        font-size: var(--woow-font-size-lg);
    }
    
    .mas-theme-toggle {
        right: var(--woow-space-2xl);
    }
    
    .mas-live-preview-toggle {
        right: calc(var(--woow-space-2xl) + 60px);
    }
    
    .mas-v2-status-bar {
        display: none; /* Hide on mobile for better UX */
    }
}

@media (max-width: 480px) {
    .mas-v2-theme-toggle {
        right: var(--woow-space-lg);
        width: 44px;
        height: 44px;
    }
    
    .mas-v2-live-preview-toggle {
        right: calc(var(--woow-space-lg) + 56px);
        width: 44px;
        height: 44px;
    }
}

/* ==========================================================================
   REDESIGN: Accessibility & Motion
   ========================================================================== */

/* High Contrast Mode */
@media (prefers-contrast: high) {
    :root {
        --woow-glass-bg: rgba(0, 0, 0, 0.8);
        --woow-glass-border: rgba(255, 255, 255, 0.8);
    }
    
    .mas-v2-card,
    .mas-v2-nav-container,
    .mas-v2-header {
        border: 2px solid white;
        background: rgba(0, 0, 0, 0.9);
    }
}

/* Reduced Motion */
@media (prefers-reduced-motion: reduce) {
    * {
        animation-duration: 0.01ms;
        animation-iteration-count: 1;
        transition-duration: 0.01ms;
    }
    
    .mas-v2-admin-wrapper {
        animation: none;
    }
}

/* Focus States */
.mas-v2-nav-tab:focus,
.mas-v2-btn:focus,
.mas-theme-toggle:focus,
.mas-live-preview-toggle:focus {
    outline: 3px solid rgba(99, 102, 241, 0.6);
    outline-offset: 2px;
}

/* ==========================================================================
   LEGACY COMPATIBILITY - Admin Menu & Bar
   ========================================================================== */

