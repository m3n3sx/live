[data-theme-palette="white"] {
    --mas-text-primary: #111827;
    --woow-text-secondary: #6b7280;
    --woow-text-tertiary: #9ca3af;
    --woow-text-link: #059669;
    --woow-text-link-hover: #047857;
    --woow-accent-primary: #059669;
    --woow-accent-primary-hover: #047857;
}

/* PALETTE: GREEN - Override colors for green theme */
[data-theme-palette="green"] {
    --mas-text-primary: #14532d;
    --woow-text-secondary: #166534;
    --woow-text-tertiary: #4ade80;
    --woow-text-link: #10b981;
    --woow-text-link-hover: #059669;
    --woow-accent-primary: #10b981;
