/* ========================================================================
   🎯 INTELLIGENT POSITIONING SYSTEM - Panel Constraints & Positioning
   ======================================================================== */
   
.mas-micro-panel {
    /* Intelligent positioning constraints */
    position: fixed !important;
    max-width: 90vw !important;
    max-height: calc(100vh - 32px) !important;
    min-width: 280px !important;
    min-height: 200px !important;
    z-index: 999999 !important;
    
    /* Overflow handling */
    overflow: auto !important;
    overscroll-behavior: contain;
    
    /* Smooth transitions for repositioning */
    transition: transform 0.2s cubic-bezier(0.4, 0, 0.2, 1),
                box-shadow 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    
    /* Visual feedback for positioning */
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12),
                0 4px 16px rgba(0, 0, 0, 0.08);
    
    /* Responsive design */
    @media (max-width: 768px) {
        max-width: calc(100vw - 20px) !important;
        max-height: calc(100vh - 40px) !important;
        min-width: 260px !important;
    }
    
    /* Touch-friendly sizing for mobile */
    @media (max-width: 480px) {
        max-width: calc(100vw - 16px) !important;
        min-width: 240px !important;
    }
}

/* Panel positioning anchors - visual feedback */
.mas-micro-panel[data-anchor="right-top"],
.mas-micro-panel[data-anchor="right-bottom"] {
    border-left: 3px solid var(--mas-primary-color, #0073aa);
}

.mas-micro-panel[data-anchor="left-top"],
.mas-micro-panel[data-anchor="left-bottom"] {
    border-right: 3px solid var(--mas-primary-color, #0073aa);
}

.mas-micro-panel[data-anchor="bottom-left"],
.mas-micro-panel[data-anchor="bottom-right"] {
    border-top: 3px solid var(--mas-primary-color, #0073aa);
}

.mas-micro-panel[data-anchor="top-left"],
.mas-micro-panel[data-anchor="top-right"] {
    border-bottom: 3px solid var(--mas-primary-color, #0073aa);
}

/* Overflow state indicators */
.mas-micro-panel.mas-overflow-detected {
    animation: mas-overflow-pulse 1s ease-in-out;
    box-shadow: 0 0 0 2px rgba(220, 38, 38, 0.3),
                0 8px 32px rgba(0, 0, 0, 0.12);
}

@keyframes mas-overflow-pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.02); }
}

/* Smart positioning feedback */
.mas-micro-panel.mas-repositioning {
    opacity: 0.8;
    transform: scale(0.98);
    pointer-events: none;
}

.mas-micro-panel.mas-repositioning::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(45deg, transparent 45%, rgba(0, 115, 170, 0.1) 50%, transparent 55%);
    animation: mas-repositioning-scan 0.8s ease-in-out;
}

@keyframes mas-repositioning-scan {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
}

/* Viewport constraint indicators */
.mas-micro-panel.mas-edge-constrained {
    border-radius: 8px 8px 0 0;
}

.mas-micro-panel[data-constrained="top"] {
    border-top: 2px solid var(--mas-warning-color, #f59e0b);
}

.mas-micro-panel[data-constrained="bottom"] {
    border-bottom: 2px solid var(--mas-warning-color, #f59e0b);
}

.mas-micro-panel[data-constrained="left"] {
    border-left: 2px solid var(--mas-warning-color, #f59e0b);
}

.mas-micro-panel[data-constrained="right"] {
    border-right: 2px solid var(--mas-warning-color, #f59e0b);
}

/* Collision detection state */
.mas-micro-panel.mas-collision-detected {
    box-shadow: 0 0 0 2px rgba(239, 68, 68, 0.4),
                0 8px 32px rgba(0, 0, 0, 0.12);
    animation: mas-collision-warning 0.5s ease-in-out 2;
}

@keyframes mas-collision-warning {
    0%, 100% { transform: translateX(0); }
    25% { transform: translateX(-2px); }
    75% { transform: translateX(2px); }
}

/* Panel content overflow handling */
.mas-micro-panel .mas-panel-content {
    max-height: calc(100% - 60px);
    overflow-y: auto;
    overflow-x: hidden;
    scrollbar-width: thin;
    scrollbar-color: rgba(0, 0, 0, 0.2) transparent;
}

.mas-micro-panel .mas-panel-content::-webkit-scrollbar {
    width: 6px;
}

.mas-micro-panel .mas-panel-content::-webkit-scrollbar-track {
    background: transparent;
}

.mas-micro-panel .mas-panel-content::-webkit-scrollbar-thumb {
    background-color: rgba(0, 0, 0, 0.2);
    border-radius: 3px;
}

.mas-micro-panel .mas-panel-content::-webkit-scrollbar-thumb:hover {
    background-color: rgba(0, 0, 0, 0.3);
}

/* Device-specific positioning adjustments */
@media (max-width: 1024px) {
    .mas-micro-panel {
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
    }
}

@media (max-width: 768px) {
    .mas-micro-panel {
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
    }
    
    .mas-micro-panel .mas-panel-header {
        padding: 16px 20px;
        font-size: 16px;
    }
    
    .mas-micro-panel .mas-panel-content {
        padding: 16px 20px;
    }
}

/* High contrast mode support */
@media (prefers-contrast: high) {
    .mas-micro-panel {
        border: 2px solid;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    }
    
    .mas-micro-panel[data-anchor*="right"] {
        border-left: 4px solid;
    }
    
    .mas-micro-panel[data-anchor*="left"] {
        border-right: 4px solid;
    }
    
    .mas-micro-panel[data-anchor*="top"] {
        border-bottom: 4px solid;
    }
    
    .mas-micro-panel[data-anchor*="bottom"] {
        border-top: 4px solid;
    }
}

/* Reduced motion support */
@media (prefers-reduced-motion: reduce) {
    .mas-micro-panel {
        transition: none !important;
        animation: none !important;
    }
    
    .mas-micro-panel.mas-repositioning::after {
        animation: none !important;
    }
    
    .mas-micro-panel.mas-collision-detected {
        animation: none !important;
    }
}

/* Print styles */
@media print {
    .mas-micro-panel {
        position: static !important;
        max-width: 100% !important;
        max-height: none !important;
        box-shadow: none !important;
        border: 1px solid #ccc !important;
        page-break-inside: avoid;
    }
}

/* ==========================================================================
   🎨 FLOATING LIVE EDIT TOGGLE - Uniwersalny przycisk Live Edit Mode
   ========================================================================== */

/* 🎛️ Floating Live Edit Toggle */
.mas-live-edit-toggle {
    position: fixed;
    top: 40px;
    right: 80px; /* Obok theme toggle */
    z-index: var(--woow-z-panel, 999999);
    display: inline-flex;
    align-items: center;
    gap: var(--woow-space-2, 8px);
    padding: var(--woow-space-3, 12px) var(--woow-space-4, 16px);
    background: linear-gradient(135deg, var(--woow-accent-primary, #667eea) 0%, #764ba2 100%);
    color: white;
    border: none;
    border-radius: var(--woow-radius-xl, 25px);
    font-size: var(--woow-font-size-sm, 13px);
    font-weight: 600;
    cursor: pointer;
    transition: all var(--woow-duration-normal, 0.3s) var(--woow-ease-out, ease-out);
    box-shadow: var(--woow-shadow-lg, 0 10px 15px -3px rgba(0, 0, 0, 0.1));
    will-change: transform;
    text-decoration: none;
}

.mas-live-edit-toggle:hover {
    transform: translateY(-2px) scale(1.02);
    box-shadow: var(--woow-shadow-xl, 0 20px 25px -5px rgba(0, 0, 0, 0.1));
    background: linear-gradient(135deg, var(--woow-accent-primary-hover, #5a6fd8) 0%, #6b46c1 100%);
    color: white;
    text-decoration: none;
}

.mas-live-edit-toggle.active {
    background: linear-gradient(135deg, var(--woow-accent-success, #10b981) 0%, #059669 100%);
    animation: mas-pulse 2s infinite;
}

@keyframes mas-pulse {
    0%, 100% { box-shadow: var(--woow-shadow-lg, 0 10px 15px -3px rgba(0, 0, 0, 0.1)); }
    50% { box-shadow: 0 4px 20px rgba(16, 185, 129, 0.4); }
}

.mas-live-edit-toggle .dashicons {
    font-size: 16px;
    width: 16px;
    height: 16px;
}

.mas-live-edit-toggle .toggle-text,
.mas-live-edit-toggle .label {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    letter-spacing: 0.3px;
}

/* 🌙 Dark theme support */
body.mas-theme-dark .mas-live-edit-toggle {
    background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
}

body.mas-theme-dark .mas-live-edit-toggle:hover {
    background: linear-gradient(135deg, #2563eb 0%, #7c3aed 100%);
}

/* 📱 Mobile responsiveness */
@media (max-width: 782px) {
    .mas-live-edit-toggle {
        top: 46px; /* WordPress mobile admin bar height */
        right: 20px;
        padding: 10px 14px;
        font-size: 12px;
    }
    
    .mas-live-edit-toggle .toggle-text,
    .mas-live-edit-toggle .label {
        display: none;
    }
}

@media (max-width: 480px) {
    .mas-live-edit-toggle {
        width: 40px;
        height: 40px;
        padding: 8px;
        justify-content: center;
    }
}
