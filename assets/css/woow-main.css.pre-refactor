    }
    
    .woow-live-edit-enabled [data-woow-editable="true"]::after {
        font-size: 10px;
        padding: 3px 6px;
    }
}

@media (max-width: 480px) {
    .woow-micro-panel {
        width: calc(100vw - 16px) !important;
        left: 8px !important;
        max-height: calc(100vh - 40px) !important;
