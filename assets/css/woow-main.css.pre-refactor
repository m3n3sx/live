    background: var(--woow-gradient-primary);
    border-color: transparent;
    transform: scale(1.05);
}

.mas-v2-checkbox input[type="checkbox"]:checked + .mas-v2-checkbox-mark::after {
    transform: translate(-50%, -60%) rotate(45deg) scale(1);
}

.mas-v2-checkbox:hover .mas-v2-checkbox-mark {
    border-color: rgba(255, 255, 255, 0.4);
    box-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
}

/* Help Text */
.mas-v2-help-text {
    display: block;
    font-size: var(--woow-font-size-xs);
    color: rgba(255, 255, 255, 0.6);
    margin-top: var(--woow-space-xs);
    font-style: italic;
    line-height: 1.4;
}

/* ==========================================================================
   REDESIGN: Floating Elements - Modern Theme Toggle + QUICK THEME SELECTOR
   ========================================================================== */

.mas-theme-toggle,
.mas-live-preview-toggle {
    position: fixed;
    bottom: var(--woow-space-3xl);
    width: 56px;
    height: 56px;
    border: 1px solid var(--woow-glass-border);
    border-radius: var(--woow-radius-full);
    background: var(--woow-glass-bg);
    backdrop-filter: var(--woow-blur-xl);
    -webkit-backdrop-filter: var(--woow-blur-xl);
    color: white;
    font-size: var(--woow-font-size-xl);
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 1000;
    box-shadow: var(--woow-glass-shadow);
    display: flex;
    align-items: center;
    justify-content: center;
}

/* NOWE! Quick Theme Selector */
.mas-quick-themes {
    position: fixed;
    bottom: var(--woow-space-3xl);
    right: calc(var(--woow-space-3xl) + 144px);
    display: flex;
    gap: var(--woow-space-sm);
    z-index: 1000;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.mas-quick-theme-btn {
    width: 48px;
    height: 48px;
    border: 2px solid var(--woow-glass-border);
    border-radius: var(--woow-radius-full);
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    align-items: center;
    justify-content: center;
    backdrop-filter: var(--woow-blur-lg);
    -webkit-backdrop-filter: var(--woow-blur-lg);
    font-size: 20px;
    position: relative;
    overflow: hidden;
}

.mas-quick-theme-btn::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: inherit;
    opacity: 0;
    transition: all 0.3s ease;
}

.mas-quick-theme-btn:hover {
    transform: translateY(-3px) scale(1.1);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
}

.mas-quick-theme-btn:hover::before {
    opacity: 1;
}

.mas-quick-theme-btn.active {
    transform: scale(1.15);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
}

/* MOTYW 1: Modern (oryginalny - fioletowo-niebieski) */
.mas-quick-theme-modern {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
}

.mas-quick-theme-modern::before {
    background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
}

.mas-quick-theme-modern:hover {
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
}

/* MOTYW 2: White Minimal (jasny z dużymi czcionkami) */
.mas-quick-theme-white {
    background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
    color: #1f2937;
    border-color: #e5e7eb;
}

.mas-quick-theme-white::before {
    background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
}

.mas-quick-theme-white:hover {
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    border-color: #cbd5e1;
}

/* MOTYW 3: Soothing Green (kojący zielony) */
.mas-quick-theme-green {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
}

.mas-quick-theme-green::before {
    background: linear-gradient(135deg, #34d399 0%, #10b981 100%);
}

.mas-quick-theme-green:hover {
    box-shadow: 0 8px 25px rgba(16, 185, 129, 0.4);
}

/* IKONY do przycisków */
.mas-theme-toggle::before {
    content: '🌓';
    font-size: 24px;
}

.mas-live-preview-toggle::before {
    content: '⚡';
    font-size: 24px;
}

.mas-live-preview-toggle.active::before {
    content: '🔥';
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
}

.mas-theme-toggle {
    right: var(--woow-space-3xl);
}

.mas-live-preview-toggle {
    right: calc(var(--woow-space-3xl) + 72px);
}

.mas-theme-toggle:hover,
.mas-live-preview-toggle:hover {
    transform: translateY(-4px) scale(1.05);
    box-shadow: 0 12px 32px rgba(31, 38, 135, 0.5);
    background: var(--woow-glass-bg);
    border-color: rgba(255, 255, 255, 0.3);
}

.mas-live-preview-toggle.active {
    background: linear-gradient(135deg, var(--woow-accent-success) 0%, var(--woow-accent-primary) 100%);
    border-color: var(--woow-accent-success);
    box-shadow: 0 4px 16px rgba(16, 185, 129, 0.4);
}

/* Tooltip dla quick themes */
.mas-quick-theme-btn::after {
    content: attr(data-tooltip);
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(0, 0, 0, 0.8);
    color: white;
    padding: 6px 12px;
    border-radius: 6px;
    font-size: 12px;
    white-space: nowrap;
        opacity: 0;
    pointer-events: none;
    transition: all 0.3s ease;
    margin-bottom: 8px;
    }

.mas-quick-theme-btn:hover::after {
        opacity: 1;
    transform: translateX(-50%) translateY(-5px);
}

/* ==========================================================================
   NOWE MOTYWY - CSS VARIABLES
   ========================================================================== */

/* MOTYW WHITE MINIMAL */
[data-theme-palette="white"] {
    --woow-accent-primary: #1f2937;
    --woow-accent-secondary: #374151;
    --woow-accent-primary: #059669;
    --woow-bg-primary: #ffffff;
    --woow-bg-secondary: #f8fafc;
    --woow-text-primary: #111827;
    --woow-text-secondary: #6b7280;
    --woow-border-primary: #e5e7eb;
    --woow-accent-success: #10b981;
    --woow-accent-warning: #f59e0b;
    --woow-accent-error: #ef4444;
    --woow-glass-bg: rgba(255, 255, 255, 0.8);
    --woow-glass-border: rgba(0, 0, 0, 0.1);
    --woow-glass-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    --mas-glass-hover: rgba(255, 255, 255, 0.9);
    --woow-gradient-primary: linear-gradient(135deg, #1f2937 0%, #374151 100%);
    --woow-gradient-secondary: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    
    /* DUŻE CZCIONKI dla white theme */
    --woow-font-size-xs: 14px;
    --woow-font-size-sm: 16px;
    --woow-font-size-base: 18px;
    --woow-font-size-lg: 22px;
    --woow-font-size-xl: 28px;
    --woow-font-size-2xl: 36px;
    --woow-font-size-3xl: 48px;
}

/* MOTYW SOOTHING GREEN */
[data-theme-palette="green"] {
    --woow-accent-primary: #10b981;
    --woow-accent-secondary: #34d399;
    --woow-accent-primary: #059669;
    --woow-bg-primary: #f0fdf4;
    --woow-bg-secondary: #ecfdf5;
    --woow-text-primary: #064e3b;
    --woow-text-secondary: #065f46;
    --woow-border-primary: #a7f3d0;
    --woow-accent-success: #059669;
    --woow-accent-warning: #d97706;
    --woow-accent-error: #dc2626;
    --woow-glass-bg: rgba(220, 252, 231, 0.7);
    --woow-glass-border: rgba(16, 185, 129, 0.2);
    --woow-glass-shadow: 0 8px 32px rgba(16, 185, 129, 0.15);
    --mas-glass-hover: rgba(220, 252, 231, 0.9);
    --woow-gradient-primary: linear-gradient(135deg, #10b981 0%, #059669 100%);
    --woow-gradient-secondary: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%);
}

/* MOTYW MODERN (oryginalny) */
[data-theme-palette="modern"] {
    --woow-accent-primary: #667eea;
    --woow-accent-secondary: #764ba2;
    --woow-accent-primary: #f093fb;
    --woow-bg-primary: #0f0f0f;
    --woow-bg-secondary: #1a1a1a;
    --woow-text-primary: #ffffff;
    --woow-text-secondary: #a0a0a0;
    --woow-border-primary: #333333;
    --woow-accent-success: #10b981;
    --woow-accent-warning: #f59e0b;
    --woow-accent-error: #ef4444;
    --woow-glass-bg: rgba(26, 26, 26, 0.8);
    --woow-glass-border: rgba(255, 255, 255, 0.1);
    --woow-glass-shadow: 0 8px 32px rgba(31, 38, 135, 0.37);
    --mas-glass-hover: rgba(26, 26, 26, 0.9);
    --woow-gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    --woow-gradient-secondary: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

/* Specjalne efekty dla green theme */
[data-theme-palette="green"] .mas-v2-card:hover {
    box-shadow: 0 20px 60px rgba(16, 185, 129, 0.2);
    border-color: rgba(16, 185, 129, 0.3);
}

[data-theme-palette="green"] .mas-v2-btn-primary {
    background: var(--woow-gradient-primary);
    border-color: var(--woow-accent-primary);
}

/* Specjalne efekty dla white theme */
[data-theme-palette="white"] .mas-v2-card {
    background: rgba(255, 255, 255, 0.9);
    border-color: rgba(0, 0, 0, 0.1);
    color: var(--woow-text-primary);
}

[data-theme-palette="white"] .mas-v2-card:hover {
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
}

[data-theme-palette="white"] .mas-v2-nav-tab {
