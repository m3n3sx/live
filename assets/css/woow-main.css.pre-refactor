}

/* ========================================================================
   🎯 ENHANCED MICRO-PANEL SYSTEM WITH INTELLIGENT POSITIONING
   ========================================================================*/

/* MicroPanel Base Styles - Enhanced for Intelligent Positioning */
.woow-micro-panel {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    /* Core positioning handled by JavaScript intelligent engine */
    position: fixed;
    z-index: 999999;
    width: 320px;
    max-width: 90vw;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 16px;
    box-shadow: 
        0 20px 40px rgba(0, 0, 0, 0.12),
        0 8px 16px rgba(0, 0, 0, 0.08),
        inset 0 1px 0 rgba(255, 255, 255, 0.9);
    color: #333;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    animation: slideIn 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    /* Modern glassmorphism effect */
    background: rgba(255, 255, 255, 0.92);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    /* Ensure panels stay in viewport bounds */
    max-height: calc(100vh - 40px);
    overflow-y: auto;
}

.woow-micro-panel::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, 
        rgba(255, 255, 255, 0.3) 0%, 
        rgba(255, 255, 255, 0.1) 50%, 
        transparent 100%);
    border-radius: inherit;
    pointer-events: none;
    opacity: 0.7;
}

.woow-micro-panel:hover {
    transform: translateY(-2px);
    box-shadow: 
        0 32px 64px rgba(0, 0, 0, 0.16),
        0 16px 32px rgba(0, 0, 0, 0.12),
        inset 0 1px 0 rgba(255, 255, 255, 0.95);
}

/* Enhanced Panel Header with Better Visual Hierarchy */

.woow-micro-panel .woow-panel-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 18px 24px;
    border-radius: 16px 16px 0 0;
    font-weight: 600;
    position: relative;
    box-shadow: 0 4px 8px rgba(0,0,0,0.12);
    overflow: hidden;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.woow-micro-panel .woow-panel-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, 
        rgba(255, 255, 255, 0.2) 0%, 
        transparent 50%, 
        rgba(0, 0, 0, 0.05) 100%);
    pointer-events: none;
}

.woow-micro-panel .woow-panel-header h3 {
    margin: 0;
    font-size: 16px;
    font-weight: 600;
    position: relative;
    z-index: 1;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    flex: 1;
}

.woow-micro-panel .woow-panel-close {
    background: none;
    border: none;
    color: white;
    font-size: 20px;
    cursor: pointer;
    opacity: 0.8;
    transition: all 0.2s ease;
    width: 28px;
    height: 28px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 2;
    font-weight: bold;
    line-height: 1;
}

.woow-micro-panel .woow-panel-close:hover {
    opacity: 1;
    background: rgba(255, 255, 255, 0.25);
    transform: scale(1.1);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
}

.woow-micro-panel .woow-panel-close:active {
    transform: scale(0.95);
}

/* Enhanced Panel Content Area */
.woow-micro-panel .woow-panel-content,
.woow-micro-panel .woow-panel-body {
    padding: 24px;
    background: rgba(255, 255, 255, 0.98);
    border-radius: 0 0 16px 16px;
    position: relative;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
}

.woow-micro-panel .woow-panel-content::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, 
        transparent, 
        rgba(0, 0, 0, 0.1), 
